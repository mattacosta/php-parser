{
    "name": "@mattacosta/php-parser",
    "description": "A cross-platform, error-tolerant PHP parser that provides a complete representation of your source code.",
    "version": "1.0.0-beta.4",
    "author": "Matt Acosta",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/mattacosta/php-parser.git"
    },
    "bugs": {
        "url": "https://github.com/mattacosta/php-parser/issues"
    },
    "files": [
        "lib/",
        "typings/",
        "CONTRIBUTING.md"
    ],
    "main": "./lib/main.js",
    "typings": "./typings/main.d.ts",
    "dependencies": {
        "@mattacosta/php-common": "^1.0.0-beta.3"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/js-yaml": "^3.11.2",
        "@types/mocha": "^5.2.5",
        "@types/node": "^8.10.37",
        "browserify": "^16.2.3",
        "coveralls": "^3.0.2",
        "del": "^3.0.0",
        "exorcist": "^1.0.1",
        "glob": "^7.1.3",
        "gulp": "^4.0.0",
        "gulp-filter": "^5.1.0",
        "gulp-mocha": "^6.0.0",
        "gulp-typescript": "^5.0.0-alpha.3",
        "js-yaml": "^3.12.0",
        "merge2": "^1.2.3",
        "mocha": "^5.2.0",
        "nyc": "^13.1.0",
        "through": "^2.3.8",
        "typescript": "^3.1.6"
    },
    "scripts": {
        "build": "tsc -p ./src",
        "build:codegen": "tsc -p ./tools/CodeGenerator",
        "build:validator": "tsc -p ./tools/Validator",
        "pretest": "tsc -p ./test",
        "test": "nyc --exclude out/test/** mocha --recursive ./out/test",
        "test:coverage": "nyc report --reporter=text-lcov | coveralls",
        "browserify": "browserify ./lib/main.js -d -s PhpParser -r ./lib/ErrorCode.json:../ErrorCode.json | exorcist ./lib/php-parser.map.js > ./lib/php-parser.js"
    }
}
